{# templates/reception/_delete_form.html.twig #}
<form method="post" action="{{ path('app_reception_delete', {'id': reception.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réception ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reception.id) }}">
    <button class="btn btn-sm btn-danger">Supprimer</button>
</form>