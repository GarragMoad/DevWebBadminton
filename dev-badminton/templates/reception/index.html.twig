{# templates/reception/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Réceptions{% endblock %}

{% block body %}
    <h1>Liste des Réceptions</h1>

    {% if pagination is not null and pagination.items is not empty %}
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th>Jour</th>
                <th>Horaire Début</th>
                <th>Horaire Fin</th>
                <th>Club</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for reception in pagination.items %}
                <tr>
                    <td>{{ reception.jour.getJour() }}</td>
                    <td>{{ reception.horaireDebut ? reception.horaireDebut|date('H:i') : '' }}</td>
                    <td>{{ reception.horaireFin ? reception.horaireFin|date('H:i') : '' }}</td>
                    <td>{{ reception.club.nom }}</td>
                    <td class="d-flex align-items-center gap-2">
                        <a href="{{ path('app_reception_edit', {'id': reception.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                        {{ include('reception/_delete_form.html.twig', {'reception': reception}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune réception trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>Aucune réception disponible.</p>
    {% endif %}

    <div class="text-end mt-3">
        <a href="{{ path('app_reception_new') }}" class="btn btn-success">Créer une nouvelle réception</a>
    </div>
{% endblock %}