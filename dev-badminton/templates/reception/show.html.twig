{# templates/reception/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails de la Réception{% endblock %}

{% block body %}
    <h1>Détails de la Réception</h1>

    <table class="table table-bordered">
        <tbody>
        <tr>
            <th>Horaire Début</th>
            <td>{{ reception.horaireDebut ? reception.horaireDebut|date('H:i') : '' }}</td>
        </tr>
        <tr>
            <th>Horaire Fin</th>
            <td>{{ reception.horaireFin ? reception.horaireFin|date('H:i') : '' }}</td>
        </tr>
        <tr>
            <th>Club</th>
            <td>{{ reception.club.nom }}</td>
        </tr>
        <tr>
            <th>Type de Réception</th>
            <td>{{ reception.typeReception.type }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-end gap-2 mt-3">
        <a href="{{ path('app_reception_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_reception_edit', {'id': reception.id}) }}" class="btn btn-primary">Modifier</a>
        {{ include('reception/_delete_form.html.twig') }}
    </div>
{% endblock %}