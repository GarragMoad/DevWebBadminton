{% extends 'base.html.twig' %}

{% block title %}Détails de la Réception{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Détails de la Réception</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Horaire Début</th>
                <td>{{ reception.horaireDebut ? reception.horaireDebut|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Horaire Fin</th>
                <td>{{ reception.horaireFin ? reception.horaireFin|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Club</th>
                <td>{{ reception.club.nom }}</td>
            </tr>
            <tr>
                <th>Type Réception</th>
                <td>{{ reception.typeReception.type }}</td>
            </tr>
            </tbody>
        </table>

        <div class="reception-actions">
            <a href="{{ path('app_reception_edit', {'id': reception.id}) }}" class="btn btn-primary btn-edit">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a href="{{ path('app_reception_index') }}" class="btn btn-secondary">
                <i class="fas fa-list"></i> Retour à la liste
            </a>
            {{ include('reception/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}