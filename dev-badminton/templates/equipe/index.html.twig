{# templates/equipe/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Equipe Index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/equipe.css') }}">
{% endblock %}

{% block body %}
    <h1>Liste des Équipes</h1>

    {% if pagination is not null and pagination.items is not empty %}
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th>Nom de l'équipe</th>
                <th>Numéro d'équipe</th>
                <th>Capitaine</th>
                <th>Joueurs</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for equipe in pagination.items %}
                <tr>
                    <td>{{ equipe.nomEquipe }}</td>
                    <td>{{ equipe.numeroEquipe }}</td>
                    <td>{{ equipe.capitaine ? equipe.capitaine.nom : 'Aucun capitaine' }}</td>
                    <td>
                        {% if equipe.joueurs is not empty %}
                            <ul>
                                {% for joueur in equipe.joueurs %}
                                    <li>{{ joueur.nom }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <span>Aucun joueur</span>
                        {% endif %}
                    </td>
                    <td class="d-flex align-items-center gap-2">
                        <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                        {{ include('equipe/_delete_form.html.twig', {'equipe': equipe}) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune équipe trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>Aucune équipe disponible.</p>
    {% endif %}

    <div class="text-end mt-3">
        <a href="{{ path('app_equipe_new') }}" class="btn btn-success">Créer une nouvelle équipe</a>
    </div>
{% endblock %}