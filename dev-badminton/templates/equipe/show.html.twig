{% extends 'base.html.twig' %}

{% block title %}Equipe{% endblock %}

{% block body %}
    <h1>Equipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom_equipe</th>
                <td>{{ equipe.nomEquipe }}</td>
            </tr>
            <tr>
                <th>Numero_equipe</th>
                <td>{{ equipe.numeroEquipe }}</td>
            </tr>
            <tr>
                <th>Club</th>
                <td>{{ club.nom }}</td>
            </tr>
             <tr>
                <th>Capitaine</th>
                 {% if equipe.capitaine is empty %}
                    <td>Aucun Capitaine pour cette équipe</td>
                {% else %}
                    <td>{{ capitaine.nom }}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Jouers</th>
                 {% for joueur in equipe.joueurs %}
                    <td>{{ joueur.nom }} {{ joueur.prenom }} </td>
                    {% else %}
                    <td>Aucun Joueur pour cette équipe</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipe_index') }}">back to list</a>

    <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}">edit</a>

    {{ include('equipe/_delete_form.html.twig') }}
{% endblock %}
