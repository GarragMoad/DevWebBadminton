{{ form_start(form, {'attr': {'class': 'user-form'}}) }}
<div class="form-group">
    {{ form_widget(form) }}
</div>
<div class="user-actions">
    <button class="btn btn-success btn-create">
        <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
    </button>
    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Retour
    </a>
</div>
{{ form_end(form) }}