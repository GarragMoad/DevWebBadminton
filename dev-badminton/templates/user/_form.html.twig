{# templates/user/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'form'}}) }}
<div class="form-group">
    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="form-group">
    {{ form_label(form.roles, null, {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="d-flex justify-content-end gap-2 mt-3">
    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
    <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
</div>

{{ form_end(form) }}