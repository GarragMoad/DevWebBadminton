{% extends 'base.html.twig' %}

{% block title %}Capitaine{% endblock %}

{% block body %}
    <h1>Capitaine</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ capitaine.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ capitaine.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ capitaine.prenom }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ capitaine.mail }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ capitaine.telephone }}</td>
            </tr>

            <tr>
                <th>Equipes</th>
                <td>
                    <ul>
                        {% for equipe in capitaine.equipes %}
                            <li>{{ equipe.nomEquipe }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_capitaine_index') }}">back to list</a>

    <a href="{{ path('app_capitaine_edit', {'id': capitaine.id}) }}">edit</a>

    {{ include('capitaine/_delete_form.html.twig') }}
{% endblock %}
