{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau club{% endblock %}

{% block body %}
    <h1 style="text-align: center; color: #333; font-size: 24px;">Ajouter un nouveau club</h1>
    
    {{ form_start(formClub, {attr: {style: 'width: 50%; margin: 0 auto; padding: 20px; background: #f8f9fa; border: 1px solid #ddd; border-radius: 5px;'}}) }}
        {{ form_widget(formClub, {attr: {style: 'margin-bottom: 10px; padding: 8px; width: 100%; border: 1px solid #ccc; border-radius: 4px;'}}) }}
        <button style="background-color: #007bff; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer;">{{ button_label|default('Save') }}</button>
    {{ form_end(formClub) }}
{% endblock %}